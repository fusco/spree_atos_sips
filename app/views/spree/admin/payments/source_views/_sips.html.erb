<fieldset>
  <legend><%= t('atos') %></legend>

  <table class="index">
    <tr>
      <th colspan="6"><%= t('atos_transaction') %></th>
    </tr>
    <tr>
      <td><label><%= t("atos_payment_type") %>:</label></td>
      <td>
        <%= payment.source.payment_means %>
      </td>
    </tr>
    <tr>
      <td><label><%= t("atos_transaction_id") %>:</label></td>
      <td>
        <%= payment.identifier %>
      </td>
    </tr>
    <tr>
      <td><label><%= t("atos_payment_ip") %>:</label></td>
      <td>
        <%= payment.order.last_ip_address %>
      </td>
    </tr>

    <tr>
      <td><label><%= t("atos_payment_state") %>:</label></td>
      <td>
        <span class="state <%= payment.order.payment_state %>"><%= Spree.t(payment.order.payment_state, :scope => :payment_states, :default => [:missing, "none"]) %></span>
      </td>
    </tr>
    <tr>
      <td><label><%= t("atos_payment_state") %>:</label></td>
      <td>
        <span class="state <%= payment.state %>"><%= Spree.t(payment.state, :scope => :payment_states, :default => [:missing, "none"]) %></span>
      </td>
    </tr>

    <tr>
      <td><label><%= t("atos_payment_currency") %>:</label></td>
      <td>
        <%= payment.order.currency %>
      </td>
    </tr>
  </table>
</fieldset>
