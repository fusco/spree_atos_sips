<fieldset>
  <legend><%= Spree.t(:payment_state) %></legend>
  <table class="index">
    <tr>
      <td><label><%= Spree.t("atos_payment_type") %>:</label></td>
      <td>
        <%= payment.source.payment_means %>
      </td>
    </tr>
    <tr>
      <td><label><%= Spree.t("atos_store_transaction") %>:</label></td>
      <td>
        <%= payment.identifier %>
      </td>
    </tr>
    <tr>
      <td><label><%= Spree.t("atos_payment_state") %>:</label></td>
      <td>
        <span class="state <%= payment.state %>"><%= Spree.t(payment.state, :scope => :payment_states, :default => [:missing, "none"]) %></span>
      </td>
    </tr>
    <tr>
      <td><label><%= Spree.t("atos_payment_currency") %>:</label></td>
      <td>
        <%= payment.order.currency %>
      </td>
    </tr>
  </table>
</fieldset>

<fieldset>
  <legend><%= Spree.t('atos_transaction_information') %></legend>
  <table class="index">
    <tr>
      <td><label><%= Spree.t("atos_transaction_date") %>:</label></td>
      <td>
        <%= Spree.l payment.created_at, :format => :short %>
      </td>
    </tr>
    <tr>
      <td><label><%= Spree.t("atos_transaction_id") %>:</label></td>
      <td>
        <%= payment.source.transaction_id %>
      </td>
    </tr>
    <tr>
      <td><label><%= Spree.t("atos_authorisation_id") %>:</label></td>
      <td>
        <%= payment.source.authorisation_id %>
      </td>
    </tr>
    <tr>
      <td><label><%= Spree.t("atos_custumer_ip") %>:</label></td>
      <td>
        <%= payment.order.last_ip_address %>
      </td>
    </tr>
  </table>
</fieldset>
